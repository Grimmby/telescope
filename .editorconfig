# Formatage global
root = true


# Règles pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4


# Règles spécifiques à certains types de fichiers

# PHP
[*.php]
indent_size = 4


# JavaScript
[*.js]
indent_size = 2


# Fichiers CSS et SCSS
[*.css, *.scss]
indent_size = 2


# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false
